package taskManagmentFinalDS;
/*packages should be named using a small letter as the first letter by
convention but classes are named by using a capital letter as the first letter also by convention :)*/

public class CompletedTaskCheck {
    private class Node {
        Task data;
        Node next;

        Node(Task data) {
            this.data = data;
            this.next = null;
        }
    }

    private Node top;

    public CompletedTaskCheck() {
        this.top = null;
    }

    // Add Completed Task to Stack
    public void addCompletedTask(Task task) {
        Node newNode = new Node(task);
        if (top == null) {
            top = newNode;
        } else {
            newNode.next = top;
            top = newNode;
        }
    }

    // View Completed Tasks History
    public void viewCompletedTasksHistory() {
        Node current = top;
        while (current != null) {
            System.out.println(current.data.getTaskName());
            current = current.next;
        }
    }

}
