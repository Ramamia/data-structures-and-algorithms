package taskManagmentFinalDS;
/*packages should be named using a small letter as the first letter by
convention but classes are named by using a capital letter as the first letter also by convention :)*/


public class Task {
	
	public class Priority {
	    public static final int URGENT = 0;
	    public static final int NORMAL = 1;
	}

	
	private String taskName;
	private int day;
	private int month;
	private int year;
	private String taskCategory;
	private int taskPriority;//urgent(true) - not urgent(false)

	/*Constructor to set the Task details (Constructors are like special methods that are called
	when we create an instance of the Task class for example to instantiate a newly created object)*/ 

	public Task(String taskName, int day, int month, int year,  String taskCategory, int taskPriority) {
		this.taskName=taskName;
		this.day = day;
		this.month = month;
		this.year = year;
		this.taskCategory=taskCategory;
		this.taskPriority=taskPriority;
	}
	
	//now the getters and setters part
	// we use them to get access to the private attributes that i initialized such as taskName and taskDueDate
	// using them helps control modification and retrieval of task information while maintaining data integrity


	//getters
	public String getTaskName() {
		return taskName;
	}
	public int getDay() {
		return day;
	}
	public int getMonth() {
		return month;
	}
	public int getYear() {
		return year;
	}
	public String getTaskCategory() {
		return taskCategory;
	}
	public int getTaskPriority() {
		return taskPriority;
	}
	
	//setters
	public void setTaskName(String taskName) {
		this.taskName=taskName;
	}
	public void setDay(int day) {
		this.day = day;
	}
	public void setMonth(int month) {
		this.month = month;
	}
	public void setYear(int year) {
		this.year = year;
	}
	public void setTaskCategory(String taskCategory) {
		this.taskCategory=taskCategory;
	}
	public void setTaskUrgency(int taskPriority) {
		this.taskPriority=taskPriority;
	}
	
	// Override toString method
    @Override
    public String toString() {
        return "Task{" +
                "name='" + taskName + '\'' +
                ", dueDate='" + day + ", " + month + ", " + year + '\'' +
                ", priority=" + taskPriority +
                ", category='" + taskCategory + '\'' +
                '}';
    }
}


